<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.preference.Preference
        android:key="@string/pref_key_refresh_interval"
        android:title="@string/pref_title_refresh_interval"
        android:summary="@string/pref_summary_refresh_interval"/>


    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/pref_key_only_use_wifi"
        android:title="@string/pref_title_only_use_wifi"
        android:summary="@string/pref_summary_only_use_wifi"/>


    <android.support.v7.preference.SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        android:key="@string/pref_key_use_internet_while_open"
        android:title="@string/pref_title_use_internet_while_open"
        android:summary="@string/pref_summary_lower_flow_mode"/>

    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/pref_key_auto_name"
        android:title="@string/pref_title_auto_name"
        android:summary="@string/pref_summary_auto_name" />



</android.support.v7.preference.PreferenceScreen>